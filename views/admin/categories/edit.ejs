<%- include('../../partials/header')  %> 
<%- include('../../partials/navbar')  %> 

<div class="container-fluid">
    <div class="row mt-3">
        <div class="card p-0">
            <div class="card-header">Editing category with name '<%= category.title %>' </div>
            <div class="card-body">
                <form action="/admin/categories/edit" method="POST">
                    <label for="title" class="form-label">Name of the category</label>
                    <input type="text" class="form-control" name="title" id="title" placeholder="Inform the category name" value="<%= category.title %>">
                     
                    <input type="hidden" class="invisible" value="<%= id %>" name="id" id="id"><br>
                    <button class="btn btn-outline-success btn-sm mt-4">Edit</button>
                </form>
            </div>
        </div>
    </div>
</div>

